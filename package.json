{
  "name": "@opensystemslab/planx-core",
  "version": "1.0.0",
  "description": "A declarative interface for PlanX data operations",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/theopensystemslab/planx-core.git"
  },
  "files": [
    "dist",
    "types"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./types/index.d.ts",
      "import": "./types/index.js",
      "require": "./types/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./types ./dist && tsc --project ./tsconfig.types.json && tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "test": "jest",
    "test:coverage": "jest; open ./coverage/lcov-report/index.html",
    "check": "tsc --project ./tsconfig.check.json && pnpm lint",
    "prepare": "pnpm i rimraf && pnpm build"
  },
  "dependencies": {
    "@opensystemslab/planx-document-templates": "github:theopensystemslab/planx-document-templates#debaeca",
    "fast-xml-parser": "^4.2.2",
    "graphql": "^16.6.0",
    "graphql-request": "^5.2.0",
    "lodash.capitalize": "^4.2.1",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2",
    "lodash.isempty": "^4.4.0",
    "lodash.isnil": "^4.0.0",
    "lodash.kebabcase": "^4.1.1",
    "lodash.property": "^4.4.2",
    "lodash.set": "^4.3.2",
    "type-fest": "^3.8.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/lodash.capitalize": "^4.2.7",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.has": "^4.5.7",
    "@types/lodash.isempty": "^4.4.7",
    "@types/lodash.isnil": "^4.0.7",
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/lodash.property": "^4.4.7",
    "@types/lodash.set": "^4.3.7",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^16",
    "pnpm": "^7.8.0"
  }
}
