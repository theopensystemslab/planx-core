{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src/types",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "types"
  },
  "include": ["src/types/index.ts"]
}
