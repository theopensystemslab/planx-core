{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "rootDir": "./src",
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./src/**/mocks"]
}
