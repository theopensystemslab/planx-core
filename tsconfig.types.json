{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "rootDir": "./src/types",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "types"
  },
  "include": ["./src/types/*"],
  "exclude": ["./src/**/*.test.ts", "./src/**/mocks"]
}
